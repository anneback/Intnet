<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >
 	
    <ImageView
        android:id="@+id/receipt_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="5dp" />
    
    <TextView
        android:id="@+id/receipt_text"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textColor="#d24726"
        android:layout_toRightOf="@+id/receipt_image"/>

     <Button
         android:id="@+id/dialogButtonCancel"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_toRightOf="@+id/receipt_image"
         android:layout_below="@+id/receipt_text"
         android:text="@string/dialogbuttoncancel" />

     <Button
         android:id="@+id/dialogButtonOK"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_alignParentRight="true"
         android:layout_below="@+id/receipt_text"
         android:text="@string/dialogbuttonok" />

</RelativeLayout>